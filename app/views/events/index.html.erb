<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table class="new_event_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <!-- <td><%#= link_to 'Show', event, :class => 'home_bttn' %></td> -->
        <td><%= link_to 'Edit', edit_event_path(event), :class => 'blue_bttn' %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'red_bttn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, :class =>'home_bttn', :style => 'float:left; margin-top:25px;' %>
