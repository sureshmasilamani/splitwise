<p id="notice"><%= notice %></p>

<h1>Listing Friends</h1>

<table class="new_event_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.description %></td>
        <!-- <td><%#= link_to 'Show', person, :class => 'home_bttn' %></td> -->
        <td><%= link_to 'Edit', edit_person_path(person), :class => 'blue_bttn' %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'red_bttn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

